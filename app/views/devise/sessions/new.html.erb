<h1 class="display-6 mb-4">Entrar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class: "form-control" %>
    <%= f.label :email %><br />
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: :email, class: "form-control" %>
    <%= f.label :password %><br />
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "form-check-input mb-3" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('buttons.login'), class: "btn btn-primary mt-1 mb-1" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
