<h2>Cadastro de Usuários</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class: "form-control" %>
    <%= f.label :email %><br />
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: :password, class: "form-control" %>
    <%= f.label :password, "#{User.human_attribute_name(:password)} \
        (Mínimo de #{@minimum_password_length} caracteres)" if @minimum_password_length %><br />
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: :password_confirmation, class: "form-control" %>
    <%= f.label :password_confirmation %><br />
  </div>

  <div class="field">
    <%= f.label :role, class: "form-label mb-1" %><br />
    <p>
      <%= f.radio_button :role, "user" %>
      <%= f.label :role_user, t('user') %>
    </p>
    <p>
      <%= f.radio_button :role, "professional" %>
      <%= f.label :role_professional, t('professional') %>
    </p>
  </div>

  <div class="actions">
    <%= f.submit t('buttons.signup'), class: "btn btn-primary mt-1 mb-1" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
